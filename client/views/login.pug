doctype html
html
    head
        meta(charset="UTF-8")
        title Battle Chess
        link(rel="stylesheet" type="text/css" href="./../styles/login.css")
        link(rel="stylesheet" type="text/css" href="./../styles/loader.css")
    body
        div.main
            div.form-container.center
                include ./components/loader
                form.center
                    p.space-down User login:
                    input(name="login" class="input-text" type="text" placeholder="enter login")
                    p.error-text#error
                    p.space-down Password:
                    input(name="password" class="input-text gap-down" type="password" placeholder="enter password")
                    br
                    input(class="space-down button horizontal-center" id="submit" type="button" value="submit")
                    br
                    input(class="space-down button horizontal-center" id="register" type="button" value="register")
    script(type="text/javascript" src="./../scripts/login.bundle.js")